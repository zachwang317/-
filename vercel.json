{
  "version": 2,
  "name": "multi-lang-translation",
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "buildCommand": "pip install -r requirements.vercel.txt",
  "installCommand": "pip install -r requirements.vercel.txt"
}
